<%= form_with(model: account, remote: true) do |form| %>
  <% if account.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(account.errors.count, "error") %> prohibited this account from being saved:</h2>

      <ul>
      <% account.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :account_name %>
  </div>

  <div class="field">
    <%= form.label :username %>
    <%= form.text_field :username, id: :account_username %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, id: :account_email %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password, id: :account_password, value: params[:account][:password] %>
  </div>

  <div class="field">
    <%= form.label :confirm_password %>
    <%= form.password_field :confirm_password, id: :account_confirm_password, value: params[:account][:confirm_password] %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
